<div class="menu-page">

            <a href="/items/new">
            <button class="add-item">Add a New Menu Item</button>
        </a>

        <hr>

<div class="menu">


{{#each theList}}

<div class="item-card">

  <a href="/items/{{this._id}}">
<h3>{{this.name}}</h3>
  </a>

<div class = "img-box">
<img class = "image-padding" src="{{this.imgPath}}">
</div>

<br>

<p class = "description">{{this.description}}</p>


<br>
<div class="hr-box">
<p class="price">
  Price: 
${{this.price}}
</p>


   <form action="/items/delete/{{this._id}}" method="POST">
       <button>Delete This Menu Item</button>
   </form>

        <a>
            <button class="add-to-cart">Add to Cart</button>
        </a>
<hr>

</div>

</div>



{{/each}}


        </div>

</div>